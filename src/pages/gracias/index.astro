---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout title="¡Gracias! · Landing Boilerplate" seo={{ noindex: true }}>
  <main class="section" role="main">
    <div class="container">
      <section class="card p-8 md:p-12 rounded-[var(--radius-2xl)] text-center">
        <h1 class="h1">¡Gracias por tu mensaje!</h1>
        <p class="mt-3 lead">
          Te contactaremos pronto. Mientras tanto, puedes volver al inicio.
        </p>
        <div class="mt-6">
          <a
            href="/"
            class="btn btn-primary h-10 px-5 rounded-[var(--radius-lg)]"
            >Ir al inicio</a
          >
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
