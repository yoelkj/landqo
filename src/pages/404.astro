---
import BaseLayout from "@/layouts/BaseLayout.astro";
---

<BaseLayout
  title="Página no encontrada · Landing Boilerplate"
  seo={{ noindex: true }}
>
  <main class="section" role="main">
    <div class="container">
      <section class="card p-8 md:p-12 rounded-[var(--radius-2xl)] text-center">
        <p class="text-sm text-[color:var(--color-fg-muted)]">Error 404</p>
        <h1 class="h1 mt-2">Página no encontrada</h1>
        <p class="mt-3 lead">
          Lo sentimos, el recurso que buscas no existe o fue movido.
        </p>
        <div class="mt-6 flex items-center justify-center gap-3 flex-wrap">
          <a
            href="/"
            class="btn btn-primary h-10 px-5 rounded-[var(--radius-lg)]"
            >Volver al inicio</a
          >
          <a
            href="#contacto"
            class="btn btn-outline h-10 px-5 rounded-[var(--radius-lg)]"
            >Contacto</a
          >
        </div>
      </section>
    </div>
  </main>
</BaseLayout>
